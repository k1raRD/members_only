<h1>Lista de posts</h1>

<ul>
  <% @posts.each do |post|%>

    <li>
      <% if user_signed_in? %>
        <p>Author: <%= post.user.email %></p>
      <%end%>
      <h2><%= post[:title] %></h2>
      <p><%= post[:content] %></p>
    </li>
  <%end%>

  <% if user_signed_in? %>
    <%=link_to "Create post", new_post_path %>
    <%=link_to "Ver usuarios", users_path %>
  <%end%>
</ul>
